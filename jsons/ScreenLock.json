{
  "title": "Add Screen Lock by Cmd+ScrollLock key",
  "rules": [
    {
        "description": "Ctrl+ScrLck to Lock Monitor",
        "manipulators": [
        {
          "from": {
            "key_code": "scroll_lock",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "q",
              "modifiers": [
                "command",
                "control"
            ]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
