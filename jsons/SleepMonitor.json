{
  "title": "Add Sleep Monitor by Pause key",
  "rules": [
    {
        "description": "Ctrl+Pause to Sleep Monitor",
        "manipulators": [
        {
          "from": {
            "key_code": "pause",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "eject",
              "modifiers": [
                "left_control",
                "left_shift"
            ]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
