{
    "title": "Mute/Unmute Teams from Outside App",
    "rules": [
        {
            "description": "Pause to Launch Teams and mute",
            "manipulators": [
                {
                    "type": "basic",
                    "parameters": {
                        "basic.to_delayed_action_delay_milliseconds": 500
                    },
                    "from": {
                        "key_code": "pause",
                        "modifiers": {
                        }
                    },
                    "to": [
                        {
                            "shell_command": "open '/Applications/Microsoft Teams.app'"
                        }
                    ],
                    "to_delayed_action": {
                        "to_if_invoked": [
                            {
                                "key_code": "m",
                                "modifiers": [
                                    "left_command",
                                    "left_shift"
                                ]
                            }
                        ]
                    }
                }
            ]
        }
    ]
}
